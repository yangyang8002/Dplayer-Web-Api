# Nginx Reverse Proxy Configuration
# Place this file in /etc/nginx/sites-available/ and symlink to sites-enabled/
# Or include it in your nginx.conf

server {
    listen 80;
    listen [::]:80;
    server_name your-domain.com;  # Change to your domain

    # Redirect HTTP to HTTPS (uncomment if using SSL)
    # return 301 https://$server_name$request_uri;

    # Or serve directly without HTTPS
    location / {
        proxy_pass http://127.0.0.1:1919;
        proxy_http_version 1.1;
        
        # WebSocket support (for future use)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Proxy headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
}

